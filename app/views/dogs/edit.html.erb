<h3>Edit this dog:</h3>

<%= form_tag dog_path(@dog), method: "PUT" do %>
  <label>Name:</label><br>
  <%= text_field_tag :name, @dog.name %><br>

  <label>Age:</label><br>
  <%= text_field_tag :age, @dog.age %><br>

  <label>Motto:</label><br>
  <%= text_field_tag :motto, @dog.motto %><br>

  <label>Breed:</label><br>
  <%= text_field_tag :breed, @dog.breed %><br>

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="submit" value="Submit">
<% end %>
