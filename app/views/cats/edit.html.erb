<h3>Edit this cat:</h3>

<%= form_tag cat_path(@cat), method: "PUT" do %>
  <label>Name:</label><br>
  <%= text_field_tag :name, @cat.name %><br>

  <label>Age:</label><br>
  <%= text_field_tag :age, @cat.age %><br>

  <label>Motto:</label><br>
  <%= text_field_tag :motto, @cat.motto %><br>

  <label>Color:</label><br>
  <%= text_field_tag :color, @cat.color %><br>

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="submit" value="Submit">
<% end %>
